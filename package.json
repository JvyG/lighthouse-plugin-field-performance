{
  "name": "lighthouse-plugin-field-performance",
  "version": "1.0.2",
  "description": "Lighthouse plugin to display field data",
  "repository": "https://github.com/treosh/lighthouse-plugin-field-performance",
  "author": "Aleksey Kulikov <alekseykulikov@me.com>, Artem Denysov <denysov.artem@gmail.com>",
  "license": "MIT",
  "source": "index.js",
  "engines": {
    "node": ">=10.13"
  },
  "files": [
    "audits",
    "utils",
    "index.js"
  ],
  "keywords": [
    "lighthouse",
    "lighthouse plugin",
    "chrome user experience report",
    "crux",
    "chrome ux report",
    "real user monitoring",
    "first contentful paint",
    "first input delay"
  ],
  "scripts": {
    "test": "prettier -c audits/** utils/** plugin.js script/** package.json README.md && tsc -p .",
    "ava": "npm run init && ava test/index.js",
    "init": "mkdir -p results && ([ -L node_modules/lighthouse-plugin-field-performance ] || ln -s ../ node_modules/lighthouse-plugin-field-performance)",
    "mock-run": "node ./test/mock-run.js",
    "mobile-run": "npm run init && lighthouse --plugins=lighthouse-plugin-field-performance --view --chrome-flags='--headless' --output-path=./results/mobile.html",
    "desktop-run": "npm run init && lighthouse --plugins=lighthouse-plugin-field-performance --view --config-path=node_modules/lighthouse/lighthouse-core/config/lr-desktop-config.js --chrome-flags='--headless' --output-path=./results/desktop.html"
  },
  "ava": {
    "snapshotDir": "test/snapshots"
  },
  "dependencies": {
    "node-fetch": "^2.5.0",
    "simple-format-number": "^0.1.2"
  },
  "peerDependencies": {
    "lighthouse": "^5.0.0"
  },
  "devDependencies": {
    "devtools-protocol": "0.0.661990",
    "@types/node": "^10.14.6",
    "ava": "^1.4.1",
    "lighthouse": "^5.0.0",
    "prettier": "^1.17.0",
    "typescript": "^3.4.5"
  }
}
